  <%- include('./partials/headAdmin.ejs') %>
  <body class="bodyAdmin">
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" href="admin.html" title="Admin"></a>
      <button
        class="navbar-toggler navbar-toggler-right"
